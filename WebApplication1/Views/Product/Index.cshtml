@model WebApplication1.Models.ProductListViewModel

@{
    ViewBag.Title = "List";
}

@{
    if(Request.IsAuthenticated)
    {
        <input style="margin-top: 10px; padding: 10px 80px;" class="btn btn-success" type="button" value="Utwórz produkt" onclick="@("window.location.href='" + @Url.Action("Create", "Product") + "'");" />
    }

    for (int i = 0; i < Model.Products.Count(); i += 2)
    {
        <div class="row">
            <div class="col-sm-6">
                @Html.Partial("ProductView", Model.Products.ToList()[i])
            </div>
            <div class="col-sm-6">
                @if (i + 1 < Model.Products.Count())
                {
                    @Html.Partial("ProductView", Model.Products.ToList()[i + 1]);
                }
            </div>
        </div>
    }
}

